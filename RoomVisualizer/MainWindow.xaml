<Window x:Class="RoomVisualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MSE API Visualizer" Height="800" Width="1280" Loaded="Window_Loaded" Closing="WindowClosing"  
        Left="0" Top="0" Icon="/RoomVisualizer;component/Images/Icon-110.png" ResizeMode="NoResize">
    <Canvas>
        <Canvas Name="canvas" Width="812" Height="737" ClipToBounds="True" Canvas.Left="5" Canvas.Top="5">
            <Border BorderBrush="Black" BorderThickness="1" Width="{Binding ElementName=canvas, Path=Width}" Canvas.Left="0" Canvas.Top="0" Height="{Binding ElementName=canvas, Path=Height}" CornerRadius="5">
               
            </Border>
        </Canvas>

        
        <StackPanel Canvas.Left="823" Canvas.Top="5" Height="737" Name="stackPanel1" Width="435">
        
            <Expander Header="Skeleton Tracker" Name="expander1" IsExpanded="True">
                <Image Name="SkeletonBasicsImage" Margin="0,5" />
            </Expander>

            <Expander Header="Unpaired Devices" Name="expander2" IsExpanded="True">
                <StackPanel Name="unpairedDeviceStackPanel" Orientation="Vertical"></StackPanel>
            </Expander>
        </StackPanel>
        
    </Canvas>


    <!-- Window.Resources for SkeletonBasics visualizer -->
    <Window.Resources>
        <Style TargetType="{x:Type Image}">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
        </Style>
    </Window.Resources>


</Window>
