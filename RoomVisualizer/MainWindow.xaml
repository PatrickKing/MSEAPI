<Window x:Class="RoomVisualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MSE API Visualizer" Height="800" Width="1280" Loaded="Window_Loaded" Closing="WindowClosing"  
        Left="0" Top="0" Icon="/RoomVisualizer;component/Images/Icon-110.png">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>



        <StackPanel Grid.Column="0"  Name="deviceStackPanel" Width="600" Height="800" Orientation="Vertical" >
            <Canvas Name="canvas" Width="600" Height="550"></Canvas>
            <TextBlock Name="textBlock1" Text="Unpaired Devices" Padding="0" Margin="5,10,0,5" FontFamily="Arial" FontWeight="ExtraBlack" />
            <StackPanel MinHeight="200" Name="unpairedDeviceStackPanel" Orientation="Horizontal" ></StackPanel>
        </StackPanel>


        <Canvas Grid.Column="1" HorizontalAlignment="Center" Margin="0,0,357,-7" Width="658">
            <Image Name="SkeletonBasicsImage" Width="550" Height="550" Canvas.Left="108" Canvas.Top="0" />
        </Canvas>

    </Grid>


    <!-- Window.Resources for SkeletonBasics visualizer -->
    <Window.Resources>
        <Style TargetType="{x:Type Image}">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
        </Style>
    </Window.Resources>


</Window>
