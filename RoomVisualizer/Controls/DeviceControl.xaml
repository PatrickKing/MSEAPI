<UserControl x:Class="RoomVisualizer.DeviceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Height="100" Width="100">

    <Canvas Name="canvas">
        <Rectangle Name="DeviceRectangle" Height="64" Width="64" Fill="#00BE3131" Opacity="7"></Rectangle>
        <Border x:Name="InnerBorder" Height="64" Width="64" BorderThickness="4" Canvas.Left="0" Canvas.Top="0"></Border>
        <TextBlock x:Name="DeviceNameLabel" Text="Device Name" Height="30" Width="100" Canvas.Left="0" Canvas.Top="70" TextAlignment="Center" TextTrimming="CharacterEllipsis"></TextBlock>
        <Line Name="LeftLine" X1="0" Y1="0" X2="200" Y2="200" Stroke="Black" StrokeThickness="2"></Line>
        <Line Name="RightLine" X1="0" Y1="0" X2="-200" Y2="200" Stroke="Black" StrokeThickness="2"></Line>
    </Canvas>



</UserControl>
