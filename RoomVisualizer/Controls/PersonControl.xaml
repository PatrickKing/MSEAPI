<UserControl x:Class="RoomVisualizer.PersonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    
    <Canvas>
        <Label Name="IdentifierLabel" Content="###" FontSize="22"></Label>
        <Label Name="CoordinatesLabel" Content="(##,##)" Canvas.Top="20" FontSize="22"></Label>
        <Ellipse Name="PersonEllipse" MouseUp="PersonEllipse_MouseUp">
            <Ellipse.Fill>
                <ImageBrush ImageSource="http://c.dryicons.com/images/icon_sets/luna_blue_icons/png/128x128/user.png" />
            </Ellipse.Fill>
        </Ellipse>
    </Canvas>
    
</UserControl>
