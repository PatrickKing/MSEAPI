<UserControl x:Class="RoomVisualizer.TrackerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Canvas>
        <Polygon Points="0,0 50,50 -50,50" Name="NearTriangle" Fill="#FFCB0000" Opacity="0.75"></Polygon>
        <Line Name="FarLine" X1="100" Y1="100" X2="-100" Y2="100" Stroke="#FFCB0000" StrokeThickness="4" Opacity="0.75"></Line>
        
        <Line Name="LeftLine" X1="0" Y1="0" X2="100" Y2="100" Stroke="Black" StrokeThickness="2"></Line>
        <Line Name="RightLine" X1="0" Y1="0" X2="-100" Y2="100" Stroke="Black" StrokeThickness="2"></Line>
        
        <Ellipse Height="50" HorizontalAlignment="Left" Name="TrackerEllipse" Stroke="#FF52318F" VerticalAlignment="Top" Width="50" StrokeThickness="3" Fill="#FF00BCF2" Canvas.Left="-25" Canvas.Top="-25" Visibility="Visible" />

    </Canvas>
</UserControl>
